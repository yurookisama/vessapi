# VessAPI Konfigürasyon Dosyası
# Bu dosyayı .env olarak kopyalayın ve kendi değerlerinizi girin

# Veritabanı Ayarları
DATABASE_URL=mongodb://localhost:27017
DATABASE_NAME=vessapi

# Test Veritabanı (Testler için ayrı veritabanı)
TEST_DATABASE_URL=mongodb://localhost:27017/vessapi_test

# Güvenlik Ayarları
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Sunucu Ayarları
HOST=0.0.0.0
PORT=8000
DEBUG=False

# Dosya Yolları
MUSIC_UPLOAD_DIRECTORY=library/music
ALBUM_IMAGE_DIRECTORY=library/images/album_image
MUSIC_IMAGE_DIRECTORY=library/images/music_image
USER_IMAGE_DIRECTORY=library/images/user_image
ARTIST_IMAGE_DIRECTORY=library/images/artist_image

# Dosya Boyutu Limitleri (MB cinsinden)
MAX_MUSIC_FILE_SIZE=100
MAX_IMAGE_FILE_SIZE=10

# Desteklenen Dosya Formatları
SUPPORTED_MUSIC_FORMATS=mp3,flac,ogg,wav,m4a
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,webp

# Loglama Ayarları
LOG_LEVEL=INFO
LOG_FILE=logs/vessapi.log

# CORS Ayarları (Geliştirme için)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000